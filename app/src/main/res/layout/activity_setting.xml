<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".SettingActivity">

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello Ashish"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hope your sessions are"
                android:textSize="18sp"
                android:layout_marginLeft="8dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="going well"
                android:textSize="18sp"
                android:layout_marginLeft="8dp"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/circular_border"
            android:layout_marginHorizontal="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="230dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/purple_border"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="6dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:text="Account"
                android:textSize="22dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="@drawable/box"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/profile"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/setting_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile Details"
                android:textSize="22dp"
                android:layout_marginHorizontal="12dp"
                android:textColor="@color/black"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/activity"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity"
                android:textSize="22dp"
                android:layout_marginHorizontal="12dp"
                android:textColor="@color/black"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/baseline_notifications_24"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/setting_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification"
                android:textSize="22dp"
                android:layout_marginHorizontal="12dp"
                android:textColor="@color/black"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/baseline_feed_24"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/setting_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FeedBack"
                android:textSize="22dp"
                android:layout_marginHorizontal="12dp"
                android:textColor="@color/black"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/purple_border"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="6dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:text="Other"
                android:textSize="22dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="@drawable/box"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/contact"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:textSize="22dp"
                android:layout_marginHorizontal="12dp"
                android:textColor="@color/black"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/privacy"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:textSize="22dp"
                android:layout_marginHorizontal="12dp"
                android:textColor="@color/black"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/about"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:textSize="22dp"
                android:layout_marginHorizontal="12dp"
                android:textColor="@color/black"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/logout"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/setting_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textSize="22dp"
                android:layout_marginHorizontal="12dp"
                android:textColor="@color/black"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>