<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="15dp"
        android:background="@color/aqua_blue">

        <ImageButton
            android:id="@+id/menu"
            android:layout_width="45dp"
            android:layout_height="60dp"
            android:src="@drawable/baseline_menu_24"
            android:background="@color/aqua_blue"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="One Stop Solution"
            android:textSize="30sp"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:textStyle="bold"
            android:background="@color/aqua_blue"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="5dp">

        <LinearLayout
            android:layout_width="107dp"
            android:layout_height="140dp"
            android:orientation="vertical"
            android:background="@drawable/purple_border"
            android:gravity="center"
            android:layout_marginHorizontal="5dp">

            <ImageView
                android:id="@+id/complaint_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/complaint"
                android:scaleType="fitCenter"
                />

            <TextView
                android:id="@+id/complaint_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complaint"
                android:textSize="20sp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="107dp"
            android:layout_height="140dp"
            android:orientation="vertical"
            android:background="@drawable/purple_border"
            android:gravity="center"
            android:layout_marginHorizontal="5dp">

            <ImageView
                android:id="@+id/resolved_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/resolved"
                android:scaleType="fitCenter"
                />

            <TextView
                android:id="@+id/resolved_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resolved"
                android:textSize="20sp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="107dp"
            android:layout_height="140dp"
            android:orientation="vertical"
            android:background="@drawable/purple_border"
            android:gravity="center"
            android:layout_marginHorizontal="5dp">

            <ImageView
                android:id="@+id/lost_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/lost"
                android:scaleType="fitCenter"
                />

            <TextView
                android:id="@+id/lost_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lost Item"
                android:textSize="20sp"
                android:textColor="@color/black"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="5dp">

        <LinearLayout
            android:layout_width="107dp"
            android:layout_height="140dp"
            android:orientation="vertical"
            android:background="@drawable/purple_border"
            android:gravity="center"
            android:layout_marginHorizontal="5dp">

            <ImageView
                android:id="@+id/status_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/status"
                android:scaleType="fitCenter"
                />

            <TextView
                android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="20sp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="107dp"
            android:layout_height="140dp"
            android:orientation="vertical"
            android:background="@drawable/purple_border"
            android:gravity="center"
            android:layout_marginHorizontal="5dp">

            <ImageView
                android:id="@+id/Notification_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/notification"
                android:scaleType="fitCenter"
                />

            <TextView
                android:id="@+id/notification_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification"
                android:textSize="20sp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="107dp"
            android:layout_height="140dp"
            android:orientation="vertical"
            android:background="@drawable/purple_border"
            android:gravity="center"
            android:layout_marginHorizontal="5dp">

            <ImageView
                android:id="@+id/feedback_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/feedback"
                android:scaleType="fitCenter"
                />

            <TextView
                android:id="@+id/feedback_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feedback"
                android:textSize="20sp"
                android:textColor="@color/black"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="5dp">

        <LinearLayout
            android:layout_width="107dp"
            android:layout_height="140dp"
            android:orientation="vertical"
            android:background="@drawable/purple_border"
            android:gravity="center"
            android:layout_marginHorizontal="5dp">

            <ImageView
                android:id="@+id/setting_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/setting"
                android:scaleType="fitCenter"
                />

            <TextView
                android:id="@+id/setting_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="20sp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="107dp"
            android:layout_height="140dp"
            android:orientation="vertical"
            android:background="@drawable/purple_border"
            android:gravity="center"
            android:layout_marginHorizontal="5dp">

            <ImageView
                android:id="@+id/add_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/baseline_add_24"
                android:scaleType="fitCenter"
                />

            <TextView
                android:id="@+id/add_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:textSize="20sp"
                android:textColor="@color/black"/>

        </LinearLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="96dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:background="@color/aqua_blue">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="5dp">

            <View
                android:layout_width="10dp"
                android:layout_height="12dp"/>

            <ImageView
                android:id="@+id/home"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_home_24"
                android:background="@color/aqua_blue"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="5dp">

            <View
                android:layout_width="10dp"
                android:layout_height="15dp"/>

            <ImageView
                android:id="@+id/feedback"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_feedback_24"
                android:background="@color/aqua_blue"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/aqua_blue"
            android:layout_marginHorizontal="5dp">

            <ImageView
                android:id="@+id/add_complaint"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/baseline_add_24"
                android:background="@drawable/circular_border"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="5dp">

                <View
                    android:layout_width="10dp"
                    android:layout_height="11dp"/>

                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:src="@drawable/baseline_profile_24"
                    android:background="@color/aqua_blue"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="5dp">

                <View
                    android:layout_width="10dp"
                    android:layout_height="15dp"/>

                <ImageView
                    android:id="@+id/setting"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:src="@drawable/setting_icon"
                    android:background="@color/aqua_blue"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>